html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel="stylesheet", href="/stylesheets/uikit.almost-flat.css")
		link(rel="stylesheet", href="/stylesheets/font-awesome.css")
		script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
		script(src="/javascripts/uikit.min.js")
		script.
			var navmenu = function(item) {
				var menu = ["#index", '#springy', '#jstest', '#help'];
				$.each(menu, function(index,value){
					if(item == value){
						$(value).addClass("uk-active");
					}else{
						$(value).removeClass("uk-active");
					}
				});
			};

			// for JavaScript Ninja assert test.
			function assert(value, desc){
				var li = document.createElement("li");
				li.className = value ? "pass" : "fail uk-icon-warning-sign";
				li.appendChild(document.createTextNode(desc));
				document.getElementById("results").appendChild(li);
			}
	body
		div.uk-container
			div.uk-navbar
				a.uk-navbar-brand(href="http://getspringy.com") UIKIT & SPRINGY.JS
